mixin product(props = {})
  -var {name, price, discount, image, hideHeart, hideImage, href = "product-detail.html"} = props
  .product
    if discount
      img.product-sale(src="assets/images/sale.png", alt="sale")
    if !hideImage
      a(href=href).product-img
        img(src=image, alt="Product image")
    .product-content
      a.product-name(href="product-detail.html")= name
      if discount
        del= price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") + 'đ'
        h5.product-price= (price - discount).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") + 'đ'
      else
        h5.product-price= price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") + 'đ'
    .product-actions
      button.product-actions__atc(href="#") Thêm vào giỏ hàng
        i.fa.fa-shopping-cart
      if !hideHeart
        button.product-actions__wl(href="#")
          i.far.fa-heart